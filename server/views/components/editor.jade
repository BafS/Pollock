.main-wrapper
	.editor
		h1
			input.bg-transp([(ngModel)]="poll.title" placeholder="Poll title")

			div.card
				.card-block
					.input-group(*ngFor="#answer of poll.answers #i=index")
						input.form-control(type='text', [value]="poll.answers[i]", (blur)="poll.answers[i]=$event.target.value")
						span.input-group-btn
							button.btn.btn-danger-outline(type="button", (click)='removeAnswer(i)') Delete

				.card-block
					.input-group
						input.form-control(type="text", placeholder="Add an answer...", #newPoll='', (keyup.enter)='addAnswer(newPoll)', (blur)='addAnswer(newPoll)')
						span.input-group-btn
							button.btn.btn-info(type="button", (click)='addAnswer(newPoll)') Add


