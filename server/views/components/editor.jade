.main-wrapper
	.editor
		h1
			input.bg-transp([(ngModel)]="question.title" placeholder="Poll title")
			{{pollTitle}} {{index}}

			div.card
				.card-block
					.input-group(*ngFor="#answer of question.choices #i=index")
						input.form-control(type='text', [value]="question.choices[i].text", (blur)="question.choices[i].text=$event.target.value")
						span.input-group-btn
							button.btn.btn-danger-outline(type="button", (click)='removeAnswer(i)') Delete

				.card-block
					.input-group
						input.form-control(type="text", placeholder="Add an answer...", #newPoll='', (keyup.enter)='addAnswer(newPoll)', (blur)='addAnswer(newPoll)')
						span.input-group-btn
							button.btn.btn-info(type="button", (click)='addAnswer(newPoll)') Add

				.card-block
					button.btn.btn-info(type="button", (click)='addAnswer(saveQuestion)') SAVE


